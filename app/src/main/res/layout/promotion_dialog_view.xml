<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:orientation="horizontal">


    <ImageButton
        android:id="@+id/promoteBishop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_margin="5dp"
        android:background="@color/promotionButtonColor"
        android:src="@drawable/bishop_white" />

    <ImageButton
        android:id="@+id/promoteKnight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_margin="5dp"
        android:background="@color/promotionButtonColor"
        android:src="@drawable/knight_white" />

    <ImageButton
        android:id="@+id/promoteRook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_margin="5dp"
        android:background="@color/promotionButtonColor"
        android:src="@drawable/rook_white" />

    <ImageButton
        android:id="@+id/promoteQueen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_margin="5dp"
        android:background="@color/promotionButtonColor"
        android:src="@drawable/queen_white" />
</LinearLayout>